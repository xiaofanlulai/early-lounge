{
  "extends": [
      "stylelint-config-standard-scss"
  ],
  "plugins": [
      "stylelint-order"
  ],
  "rules": {
      "scss/load-no-partial-leading-underscore": null,
      "alpha-value-notation": "number",
      "at-rule-no-unknown": [
          true,
          {
              "ignoreAtRules": [
                  "use",
                  "content",
                  "each",
                  "else",
                  "extend",
                  "for",
                  "function",
                  "if",
                  "include",
                  "mixin",
                  "return"
              ]
          }
      ],
      "selector-class-pattern": null,
      "selector-id-pattern": null,
      "color-named": "never",
      "function-url-quotes": "never",
      "no-descending-specificity": null,
      "no-empty-source": null,
      "rule-empty-line-before": null,
      "declaration-block-no-redundant-longhand-properties": true,
      "order/properties-order": [
          "display",
          "box",
          "box-decoration-break",
          "-moz-box-orient",
          "-webkit-box-orient",
          "box-orient",
          "box-direction",
          "box-ordinal-group",
          "-moz-box-align",
          "-webkit-box-align",
          "box-align",
          "box-flex",
          "box-flex-group",
          "box-pack",
          "box-lines",
          "box-orient",
          "-webkit-line-clamp",
          "line-clamp",
          "flex-direction",
          "flex-wrap",
          "flex-flow",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "flex",
          "align-self",
          "flex-order",
          "flex-pack",
          "flex-align",
          "grid",
          "grid-template-rows",
          "grid-template-columns",
          "grid-row",
          "grid-column",
          "grid-template-areas",
          "grid-area",
          "justify-content",
          "align-items",
          "align-content",
          "order",
          "visibility",
          "overflow",
          "overflow-x",
          "overflow-y",
          "list-style",
          "list-style-type",
          "list-style-image",
          "list-style-position",
          "marker-offset",
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "float",
